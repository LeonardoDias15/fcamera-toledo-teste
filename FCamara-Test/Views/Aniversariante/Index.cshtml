@{
    ViewData["Title"] = "Aniversariantes";
}

<div class="content">

    <h1>Listagem de aniversariantes</h1>

    <div>
        <form>
            <div class="box-form">

                <div class="filtro">

                    <div class="box-campo">
                        <label> Mês</label>
                        <select class="campo-combo" id="mes">
                            <option>Selecione</option>
                            <option value="1">Janeiro</option>
                            <option value="2">Fevereiro</option>
                            <option value="3">Março</option>
                            <option value="4">Abril</option>
                            <option value="5">Maio</option>
                            <option value="6">Junho</option>
                            <option value="7">Julho</option>
                            <option value="8">Agosto</option>
                            <option value="9">Setembro</option>
                            <option value="10">Outubro</option>
                            <option value="11">Novembro</option>
                            <option value="12">Dezembro</option>
                        </select>
                    </div>

                </div>

                <div class="filtro-botao">
                    <div class="conteudo-filtro-botao aniversariantes">
                        <a class="botao" style="padding: 10px;" onclick="buscarAniversariantes()">Buscar</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div id="partialAniversariantes"></div>

</div>
