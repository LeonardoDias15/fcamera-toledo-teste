@model List<DependenteFuncionario>
@{
    ViewData["Title"] = "Dependentes";
}

<div class="content">

    <div class="lista-botoes">
        <a class="botao" asp-action="Index" asp-controller="Funcionario">Voltar</a>
    </div>


    <h1>Listagem de dependentes</h1>

    <table class="rTable">
        <thead>
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>Sexo</th>
                <th>Data Nascimento</th>
            </tr>
        </thead>

        <tbody>

            @if (Model != null && Model.Any())
            {
                foreach (DependenteFuncionario dependenteFuncionario in Model)
                {
                    <tr>
                        <td>@dependenteFuncionario.Nome</td>
                        <td>@dependenteFuncionario.CPF</td>
                        <td>@dependenteFuncionario.Sexo</td>
                        <td>@dependenteFuncionario.DataNascimento.Date.ToString("g")</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5">Nenhum registro  encontrado</td></tr>
            }

        </tbody>
    </table>

</div>
