@model DependenteFuncionario
@{
    ViewData["Title"] = "Novo Funcionário";
}

<div class="content">

    <div class="lista-botoes">
        <a class="botao" asp-action="Index" asp-controller="Funcionario">Voltar</a>
    </div>

    <br />
    <h1>Cadastro de dependente</h1>

    @if (!string.IsNullOrEmpty(ViewBag.Erro))
    {
        <div class="mensagem-erro">
            <span>@ViewBag.Erro</span>
        </div>
    }

    <div>
        <form asp-action="CadastrarDependenteFuncionario" asp-controller="Funcionario">
            <fieldset>
                <legend>Dados do dependente:</legend>
                <div class="box-form">

                    <input type="hidden" asp-for="FuncionarioId" class="campo-texto" />

                    <div class="filtro">

                        <div class="box-campo">
                            <label>Nome do funcionário</label>
                            <input type="text" asp-for="Nome" class="campo-texto" />
                        </div>

                        <div class="box-campo">
                            <label>CPF do funcionário</label>
                            <input type="text" asp-for="CPF" class="campo-texto" />
                        </div>

                    </div>


                    <div class="filtro">
                        <div class="box-campo">
                            <label>Data de nascimento</label>
                            <input type="text" asp-for="DataNascimento" class="campo-texto" />
                        </div>

                        <div class="box-campo">
                            <label>Sexo</label>
                            <select class="campo-texto" asp-for="Sexo">
                                <option value="0">Selecione</option>
                                <option value="F">F</option>
                                <option value="M">M</option>
                            </select>
                        </div>
                    </div>

                </div>

                <div>
                    <button class="botao" style="width:100%;">Cadastrar</button>
                </div>
            </fieldset>
        </form>
    </div>


</div>
